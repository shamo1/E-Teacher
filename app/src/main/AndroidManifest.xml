<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eteacher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ETeacher">
        <activity
            android:name=".Activities.JoinLiveClass"
            android:exported="true" />
        <activity
            android:name=".Activities.StudentDashboard"
            android:exported="true" />
        <activity
            android:name=".Activities.LecturePreviewViewer"
            android:exported="true" />
        <activity
            android:name=".Activities.LecturePreviewUploader"
            android:exported="true" />
        <activity
            android:name=".Activities.AssignmentsActivity"
            android:parentActivityName=".Activities.ClassroomlistActivity" />
        <activity
            android:name=".Activities.LiveCassActivity"
            android:parentActivityName=".Activities.Dashboard" />
        <activity
            android:name=".Activities.InviteActivity"
            android:parentActivityName=".Activities.Dashboard" />
        <activity android:name=".Activities.JoinClassActivity" />
        <activity android:name=".Activities.SubjectMaterials" />
        <activity android:name=".Activities.ClassroomlistActivity" />
        <activity
            android:name=".Activities.CreateClassroomActivity"
            android:parentActivityName=".Activities.Dashboard" />
        <activity
            android:name=".Activities.Dashboard"
            android:parentActivityName=".Activities.ClassroomlistActivity" />
        <activity android:name=".Activities.RegisterActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity
            android:name=".Activities.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>